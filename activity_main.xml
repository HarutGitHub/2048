<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#fbf8ef"
    android:layout_weight="7"
    tools:context="com.example.acer.myapplication.MainActivity">

    <LinearLayout
       android:layout_marginTop="25dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:orientation="horizontal"
       >

        <TextView
           android:textColor="#776e65"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="2048"
           android:textSize="45dp"
           android:layout_weight="2"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="2"/>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#bbada0"
           android:layout_marginRight="5dp"
           android:text=""/>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#bbada0"
           android:text=""/>


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#776e65"
            android:layout_height="match_parent"
            android:text="Join the numbers and get to the "
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2048 tile!"
            android:fontFamily="cursive"
            android:textColor="#656565"
            android:textSize="18dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW GAME"
            android:background="#fbf8ef"
            android:textAlignment="textStart"
            android:textColor="#fe8205"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/newGameorRestart"/>
        <Button
            android:background="#fbf8ef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:textSize="20sp"
            android:textColor="#fe8205"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:background="#bbada0"
        android:id="@+id/GameScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn1"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:layout_marginRight="8dp"
                android:id="@+id/btn2"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:layout_marginRight="8dp"
                android:id="@+id/btn3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn4"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:layout_marginRight="8dp"
                android:id="@+id/btn5"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn6"
                android:layout_marginRight="8dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn7"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn8"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:layout_marginRight="8dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn10"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn11"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn12"
                android:background="@color/btnColor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn13"
                android:layout_marginRight="8dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn14"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn15"
                android:layout_marginRight="8dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btnColor"
                android:id="@+id/btn16"
                />

        </LinearLayout>

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="30dp"
           android:id="@+id/leftB"
           android:layout_marginTop="20dp"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/upB"/>
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/bottomB"/>
       </LinearLayout>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:id="@+id/rightB"/>

   </LinearLayout>
</LinearLayout>
